                      <li class="text-muted"><span class="fa-li"><i class="fas fa-times"></i></span>Monthly Reports</li>
                    </ul>
                    <a href="/" class="btn btn-block btn-primary text-uppercase">Get it</a>
                  </div>
                </div>
              </div>
              <!-- Plus Tier -->
              <div class="col-lg-4">
                <div class="card mb-5 mb-lg-0">
                  <div class="card-body">
                    <h5 class="card-title text-muted text-uppercase text-center">Plus</h5>
                    <h6 class="card-price text-center">$0<span class="period">/month</span></h6>
                    <hr>
                    <ul class="fa-ul">
                      <li><span class="fa-li"><i class="fas fa-check"></i></span><strong>5 Users</strong></li>
                      <li><span class="fa-li"><i class="fas fa-check"></i></span>Unlimited Schooodles</li>
                      <li><span class="fa-li"><i class="fas fa-check"></i></span>Unlimited Public Schooodles</li>
                      <li><span class="fa-li"><i class="fas fa-check"></i></span>Community Access</li>
                      <li><span class="fa-li"><i class="fas fa-check"></i></span>Unlimited Private Schooodles</li>
                      <li><span class="fa-li"><i class="fas fa-times"></i></span>Monthly Status Reports</li>
                    </ul>
                    <a href="/" class="btn btn-block btn-primary text-uppercase">Schooodle!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <div class="col-1"></div>
    </div>
    <% include partials/_footer.ejs %>
